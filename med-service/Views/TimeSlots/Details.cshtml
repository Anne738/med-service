@model med_service.ViewModels.TimeSlotViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TimeSlotDetails"];
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["TimeSlot"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Schedule"]
        </dt>
        <dd class="col-sm-10">
            @Model.ScheduleString
        </dd>
        <dt class="col-sm-2">
            @Localizer["Time"]
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            @Localizer["IsBooked"]
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsBooked)
            {
                <span class="badge bg-danger">@Localizer["Booked"]</span>
            }
            else
            {
                <span class="badge bg-success">@Localizer["Available"]</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">@Localizer["Edit"]</a>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
</div>
