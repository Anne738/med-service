@model med_service.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.PatientName</dd>

        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Model.DoctorName</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>

        <dt class="col-sm-2">Time Slot</dt>
        <dd class="col-sm-10">
            @Model.TimeSlot?.StartTime.ToString("hh\\:mm") - @Model.TimeSlot?.EndTime.ToString("hh\\:mm")
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
