@model IEnumerable<med_service.ViewModels.SpecializationViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["SpecializationsList"];
}

<h1>@Localizer["SpecializationsList"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">@Localizer["CreateNew"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["Name"]
            </th>
            <th>
                @Localizer["Description"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">@Localizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">@Localizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
