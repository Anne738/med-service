@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model med_service.Models.Patient

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="modalLabel">@Localizer["DeletePatient"]</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <h3>@Localizer["DeleteConfirmation"]</h3>
            <dl class="row">
                <dt class="col-sm-4">
                    @Localizer["User"]
                </dt>
                <dd class="col-sm-8">
                    @(Model.User?.FirstName + " " + Model.User?.LastName)
                </dd>
                <dt class="col-sm-4">
                    @Localizer["DateOfBirth"]
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>
            </dl>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
