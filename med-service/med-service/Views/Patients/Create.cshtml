@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model med_service.ViewModels.PatientViewModel

@{
    ViewData["Title"] = Localizer["CreatePatient"];
}

<h1>@Localizer["CreatePatient"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="UserId" class="control-label">@Localizer["User"]</label>
                <select asp-for="UserId" class="form-control" asp-items="Model.UserList">
                    <option value="">-- @Localizer["SelectUser"] --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="control-label">@Localizer["DateOfBirth"]</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
