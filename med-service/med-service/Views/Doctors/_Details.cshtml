@model med_service.Models.Doctor
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true"> 
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["Edit Doctor"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Показ данных без инпутов -->
                <div class="mb-3">
                    <label class="form-label">@Localizer["First Name"]</label>
                    <p>@Model.User.FirstName</p> <!-- Отображаем значение без поля ввода -->
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Last Name"]</label>
                    <p>@Model.User.LastName</p> <!-- Отображаем значение без поля ввода -->
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Experience Years"]</label>
                    <p>@Model.ExperienceYears</p> <!-- Отображаем значение без поля ввода -->
                </div>
            </div>
        </div>
    </div>
 </div>
