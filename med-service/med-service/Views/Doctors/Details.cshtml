@model med_service.Models.Doctor

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Врач</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Пользователь
        </dt>
        <dd class="col-sm-10">
            @if (Model.User != null)
            {
                @($"{Model.User.LastName} {Model.User.FirstName}")
            }
            else
            {
                @Html.DisplayFor(model => model.User.Id)
            }
        </dd>
        <dt class="col-sm-2">
            Больница
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hospital.Name)
        </dd>
        <dt class="col-sm-2">
            Специализация
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization.Name)
        </dd>
        <dt class="col-sm-2">
            Опыт работы
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExperienceYears) лет
        </dd>
        <dt class="col-sm-2">
            Расписания
        </dt>
        <dd class="col-sm-10">
            @if (Model.Schedules != null && Model.Schedules.Any())
            {
                <ul>
                    @foreach (var schedule in Model.Schedules)
                    {
                        <li>
                            @schedule.Day - @schedule.WorkingHours
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>Нет активных расписаний</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
</div>
