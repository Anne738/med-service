@model IEnumerable<med_service.Models.Doctor>

@{
    ViewData["Title"] = "Список лікарів";
}

<h1>Список лікарів</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Створити нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ПІБ
            </th>
            <th>
                Лікарня
            </th>
            <th>
                Спеціалізація
            </th>
            <th>
                Досвід роботи
            </th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.User != null)
                    {
                        @($"{item.User.LastName} {item.User.FirstName}")
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.User.Id)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hospital.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialization.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExperienceYears) років
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
