@model med_service.ViewModels.HospitalViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["lblDetailsTitle"];
}

<h1>@Localizer["lblDetailsTitle"]</h1>

<div>
    <h4>@Localizer["lblHospital"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["lblName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Localizer["lblAddress"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Localizer["lblContact"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">@Localizer["lblEdit"]</a>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["lblBackToList"]</a>
</div>
