@model List<med_service.Models.Appointment>

@{
    ViewData["Title"] = "Історія прийомів лікаря";
}

<h2>@ViewData["Title"]</h2>

<!-- Фільтр за статусом -->
<form method="get" action="@Url.Action("GetDoctorHistory", "Appointments")">
    <input type="hidden" name="doctorId" value="@ViewBag.DoctorId" />
    <label for="status">Фільтр за статусом:</label>
    <select name="status" id="status" onchange="this.form.submit()">
        <option value="">Всі статуси</option>
        <option value="PENDING">Очікується</option>
        <option value="CONFIRMED">Підтверджено</option>
        <option value="COMPLETED">Завершено</option>
        <option value="CANCELED">Скасовано</option>
    </select>
</form>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Пацієнт</th>
                <th>Час</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.TimeSlot.StartTime.ToString("yyyy-MM-dd")</td>
                    <td>@appointment.Patient.User.LastName</td>
                    <td>@appointment.TimeSlot.StartTime.ToString("HH:mm") - @appointment.TimeSlot.EndTime.ToString("HH:mm")</td>
                    <td>@appointment.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Немає записів.</p>
}
