@model med_service.ViewModels.TimeSlotViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<!-- Delete Modal -->
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Localizer["DeleteTimeSlot"]</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <h3>@Localizer["AreYouSureDelete"]</h3>
            <dl class="row">
                <dt class="col-sm-4">@Localizer["Schedule"]</dt>
                <dd class="col-sm-8">@Model.ScheduleString</dd>
                <dt class="col-sm-4">@Localizer["Time"]</dt>
                <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>
                <dt class="col-sm-4">@Localizer["IsBooked"]</dt>
                <dd class="col-sm-8">
                    @if (Model.IsBooked)
                    {
                        <span class="badge bg-danger">@Localizer["Booked"]</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@Localizer["Available"]</span>
                    }
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["BackToList"]</button>
                </div>
            </form>
        </div>
    </div>
</div>