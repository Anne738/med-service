@model med_service.Models.TimeSlot

@{
    ViewData["Title"] = "Деталі часового слоту";
}

<h1>Деталі</h1>

<div>
    <h4>Часовий слот</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Розклад
        </dt>
        <dd class="col-sm-10">
            @if (Model.Schedule != null && Model.Schedule.Doctor != null && Model.Schedule.Doctor.User != null)
            {
                @($"{Model.Schedule.Doctor.User.LastName} - {Model.Schedule.Day}")
            }
            else
            {
                @Html.DisplayFor(model => model.Schedule.Id)
            }
        </dd>
        <dt class="col-sm-2">
            Час
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.isBooked)
        </dt>
        <dd class="col-sm-10">
            @if (Model.isBooked)
            {
                <span class="badge bg-danger">Зайнято</span>
            }
            else
            {
                <span class="badge bg-success">Вільно</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Змінити</a>
    <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
</div>
