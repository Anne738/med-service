@model IEnumerable<med_service.Models.TimeSlot>

@{
    ViewData["Title"] = "Временные слоты";
}

<h1>Временные слоты</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Schedule)
            </th>
            <th>
                Время
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isBooked)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Schedule != null && item.Schedule.Doctor != null && item.Schedule.Doctor.User != null)
                    {
                        @($"{item.Schedule.Doctor.User.LastName} - {item.Schedule.Day}")
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Schedule.Id)
                    }
                </td>
                <td>
                    @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                </td>
                <td>
                    @if (item.isBooked)
                    {
                        <span class="badge bg-danger">Занят</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Свободен</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
