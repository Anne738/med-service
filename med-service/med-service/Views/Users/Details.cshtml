@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model med_service.ViewModels.UserViewModel

@{
    ViewData["Title"] = Localizer["lblDetails"];
}

<h1>@Localizer["lblDetails"]</h1>
<h4>@Localizer["lblUser"]</h4>
<table class="table">
    <tr>
        <th>@Localizer["lblFirstName"]</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>@Localizer["lblLastName"]</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>@Localizer["lblEmail"]</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>@Localizer["lblUsername"]</th>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <th>@Localizer["lblRole"]</th>
        <td>@Model.Role</td>
    </tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">@Localizer["lblEditButton"]</a>
<a asp-action="Index" class="btn btn-secondary">@Localizer["lblBackToListButton"]</a>
