@model med_service.ViewModels.UserViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h3>@Localizer["lblConfirmationQuestion"]</h3>
        </div>
        <div class="modal-body">
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()

                <dl class="row">
                    <dt class="col-sm-4">@Localizer["lblFirstName"]</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">@Localizer["lblLastName"]</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">@Localizer["lblEmail"]</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">@Localizer["lblUsername"]</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">@Localizer["lblRole"]</dt>
                    <dd class="col-sm-8">@Model.Role</dd>
                </dl>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger">@Localizer["lblDeleteButton"]</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["lblCancelButton"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
