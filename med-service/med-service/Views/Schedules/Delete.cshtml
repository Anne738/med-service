@model med_service.Models.Schedule

@{
    ViewData["Title"] = "Видалення";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити цей розклад?</h3>
<div>
    <h4>Розклад</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            День тижня
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class="col-sm-2">
            Лікар
        </dt>
        <dd class="col-sm-10">
            @if (Model.Doctor?.User != null)
            {
                @($"{Model.Doctor.User.LastName} {Model.Doctor.User.FirstName}")
            }
            else
            {
                @Html.DisplayFor(model => model.Doctor.Id)
            }
        </dd>
        <dt class="col-sm-2">
            Робочі години
        </dt>
        <dd class="col-sm-10">
            @Model.WorkingHours
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
    </form>
</div>
