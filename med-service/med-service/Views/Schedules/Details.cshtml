@model med_service.Models.Schedule

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Розклад</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            День тижня
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class="col-sm-2">
            Лікар
        </dt>
        <dd class="col-sm-10">
            @if (Model.Doctor?.User != null)
            {
                @($"{Model.Doctor.User.LastName} {Model.Doctor.User.FirstName}")
            }
            else
            {
                @Html.DisplayFor(model => model.Doctor.Id)
            }
        </dd>
        <dt class="col-sm-2">
            Робочі години
        </dt>
        <dd class="col-sm-10">
            @Model.WorkingHours
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
</div>
